<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OffscoreApp.Views.StartUpPage" Background="Black">
    <ContentPage.Content>
        <StackLayout>
            <Grid BackgroundColor="Black"  >
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="0.5*" />
                </Grid.RowDefinitions>

                <Image Source="mainLogo.png" WidthRequest="750" HeightRequest="200" Grid.Row="1" HorizontalOptions="CenterAndExpand"></Image>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>